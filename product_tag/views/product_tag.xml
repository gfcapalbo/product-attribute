<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_form_tags">
            <field name="name">product.normal.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="tag_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>
      <record model="ir.ui.view" id="view_product_tag_form">
            <field name="name">product.tag.form</field>
            <field name="model">product.tag</field>
            <field name="arch" type="xml">
                <form string="Product tag">
                    <group col="4">
                        <field name="name"/> 
                        <field name="active"/>
                        <field name="parent_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_tag_category_tree">
            <field name="name">product.tag_category_tree</field>
            <field name="model">product.tag</field>
            <field name="arch" type="xml">
                <tree toolbar="1" string="Partner Tags">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="action_product_tag_form" model="ir.actions.act_window">
            <field name="name">Product Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.tag</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new product tags.
                    </p><p>
                    Manage the product tags to better classify them for tracking and analysis purposes.
                    A product may have several tags and tags have a hierarchical structure: a product with a tag has also the parent tags.
                </p>
            </field>
        </record>
        <menuitem 
            action="action_product_tag_form" 
            id="menu_product_tag_form" 
            name="Product Tags" 
            sequence="4" 
            parent="stock.menu_stock_product" 
            groups="stock.group_stock_manager"
            />
    </data>
</openerp>
